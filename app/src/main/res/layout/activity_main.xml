<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Biodata Mahasiswa Pemrograman Mobile A"
            android:layout_margin="15dp"
            android:textColor="@color/tosca"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:textSize="25sp"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <ImageView
        android:layout_width="145dp"
        android:layout_height="100dp"
        android:layout_below="@id/header"
        android:layout_alignParentRight="true"
        android:src="@drawable/user"/>
    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_margin="15dp"
        android:fontFamily="monospace"
        android:text="Nama  : Anugrah Lestari"
        android:textSize="15sp"
        android:textColor="@color/tosca" />

    <TextView
        android:id="@+id/nim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama"
        android:text="NIM   : H071191059"
        android:fontFamily="monospace"
        android:layout_margin="15sp"
        android:textColor="@color/tosca"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/ttl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nim"
        android:text="TTL   : Pinrang, 27 Januari 2001"
        android:fontFamily="monospace"
        android:layout_margin="15sp"
        android:textColor="@color/tosca"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ttl"
        android:text="Email : nugratar59@gmail.com"
        android:fontFamily="monospace"
        android:layout_margin="15sp"
        android:textColor="@color/tosca"
        android:textSize="15sp" />

</RelativeLayout>